{
  "name": "gallusgarten",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "check-node": "tsx scripts/check-node-version.ts",
    "check-env": "tsx scripts/checkEnv.ts",
    "lint": "eslint . --fix",
    "encrypt": "cross-env PASSWORD=myPassword ENV=.env.development tsx scripts/env-encryptor.ts encrypt",
    "decrypt": "cross-env PASSWORD=myPassword ENV=.env.development.enc tsx scripts/env-encryptor.ts decrypt",
    "dev": "npm run check-node && npm run check-env && cross-env NODE_ENV=development nodemon",
    "test": "cross-env NODE_ENV=test nodemon",
    "build": "tsc",
    "postbuild": "tsx scripts/copy-files.ts",
    "serve": "cross-env NODE_ENV=production node dist/bin/www.js"
  },
  "dependencies": {
    "@types/ms": "^2.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "~1.4.7",
    "cors": "^2.8.5",
    "debug": "~4.4.0",
    "dotenv": "^16.4.7",
    "express": "~5.1.0",
    "express-session": "^1.18.1",
    "http-errors": "~2.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.10.0",
    "nano": "^10.1.4",
    "nodemailer": "^7.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pug": "3.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.0",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "semver": "^7.7.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
