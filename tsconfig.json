{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  // "include": ["./**/*.ts"] /* Include all TypeScript files in the project */,
  "include": ["src", "scripts/api.ts"],
  "exclude": ["node_modules"] /* Exclude node_modules from compilation */
}
